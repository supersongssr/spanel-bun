{
  "name": "spanel-backend",
  "version": "0.1.0",
  "description": "SPanel Backend API - Bun + Elysia + TypeScript",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist",
    "test": "bun test",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:pull": "prisma db pull",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@prisma/client": "^5.8.0",
    "bcrypt": "^5.1.1",
    "elysia": "^1.4.21",
    "ioredis": "^5.3.2",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^6.9.8",
    "telegraf": "^4.16.3",
    "typebox": "^1.0.77",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6.4.14",
    "bun-types": "latest",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
